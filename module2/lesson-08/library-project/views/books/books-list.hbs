<h1>Books</h1>

{{#each books}}
    <div>
        <h3>{{title}}</h3>
        <p>By: {{author}}</p> {{!-- additional book property --}}
        <a href="/books/{{_id}}">See details</a> {{!-- link that points to the details page --}}
        <a href="/books/{{_id}}/edit">Edit</a> 
         <form action="/books/{{_id}}/delete" method="POST">
            <button>Delete</button>
        </form>
    </div>
{{/each}}